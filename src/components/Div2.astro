---
const {titel, afsnit1, afsnit2, afsnit3} = Astro.props;
---


<div class="hero_text_container">
    <h1>{titel}</h1>
    <p>{afsnit1}</p>
    <p>{afsnit2}</p>
    <p>{afsnit3}</p>
</div>

<style>
.hero_text_container {
  text-align: center;
  margin-bottom: 2rem;
  padding: 0 1rem;
}

.hero_text_container h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
}

.hero_text_container h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: #f3ece6;
}

.hero_text_container p {
  font-size: 1.1rem;
  max-width: 800px;
  margin: 0.5rem auto;
  text-align: left;
  color: #f3ece6;
}
</style>


<style>
.hero_text_container {
  text-align: center;
  margin-bottom: 4rem;
}

.hero_text_container h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
}

.hero_text_container h3 {
  text-align: left;
  font-size: 1.25rem;
  margin: 0 auto;
  max-width: 800px;
}
</style>
